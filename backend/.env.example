# ============================================================================
# Google OAuth Configuration
# ============================================================================
# Get credentials from https://console.cloud.google.com/
# 1. Create/select project
# 2. Enable Google Drive API
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add redirect URIs for both local and production

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Production: Update with your Railway backend URL
# GOOGLE_REDIRECT_URI=https://your-backend.railway.app/auth/callback

# ============================================================================
# Application Settings
# ============================================================================
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
SESSION_SECRET_KEY=change-this-secret-key
DEBUG=True

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173
# Production: FRONTEND_URL=https://your-frontend.railway.app

# Session configuration
SESSION_MAX_AGE=604800  # 7 days in seconds

# Google Drive folder name
DRIVE_FOLDER_NAME=Retirement Planner Scenarios

# ============================================================================
# Production Database Configuration (Railway)
# ============================================================================
# Railway auto-injects these when you add Redis and PostgreSQL plugins.
# Leave commented for local development (uses in-memory fallback).

# REDIS_URL=redis://default:password@host:port
# DATABASE_URL=postgresql://user:password@host:port/database
